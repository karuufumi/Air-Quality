generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    email    String @unique
    password String
    role     String
    isVerified   Boolean   @default(false)
}

model lux {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    timestamp       String
    value           Float
    timestamp_local DateTime
}

model rh {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    timestamp       String
    value           Float
    timestamp_local DateTime
}

model rt {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    timestamp       String
    value           Float
    timestamp_local DateTime
}
